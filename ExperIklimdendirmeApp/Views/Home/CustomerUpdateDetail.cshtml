
@{
    ViewBag.Title = "CustomerUpdateDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using ExperIklimdendirmeApp.Models
@model Customer

<h2>Müşteri Güncelleme</h2>
<br />
@using (Html.BeginForm("CustomerUpdate", "Home", FormMethod.Post))
{

    <div class="row">
        <div>
            <div class="form-group m-form__group row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-5">
                    @Html.TextBox("Id", null, new { @class = "form-control ", @readonly = "readonly", @style = "display:none" })
                </div>
                <div class="col-lg-10">
                    <div class="col-lg-12">
                        <div class="form-group m-form__group row">
                            <div class="form-group">

                            </div>
                            <div class="col-lg-5">
                                <label for="exampleInputEmail1" class="control-label">Ad : </label>

                                @Html.TextBox("FirstName", null, new { placeholder = Model.FirstName, @class = "form-control " })

                            </div>
                            <div class="col-lg-5">
                                <label for="exampleInputPassword1" class="control-label">Soyad : </label>
                                @Html.TextBox("LastName", null, new { placeholder = Model.LastName, @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group m-form__group row">
                            <div class="col-lg-5">
                                <label for="exampleInputPassword1" class="control-label">Telefon : </label>
                                @Html.TextBox("PhoneNumber", null, new { placeholder = Model.PhoneNumber, @class = "form-control" })
                            </div>

                            <div class="col-lg-5">
                                <label for="exampleInputPassword1" class="control-label ">Adres : </label>
                                @Html.TextArea("Address", null, new { placeholder = Model.Address, @class = "form-control" })
                            </div>
                        </div>

                    </div>

                </div>


                <div class="col-lg-10">
                    <div class="col-lg-12">
                        <div class="form-group m-form__group row">
                            <div class="col-lg-5">
                                <label for="exampleInputPassword1" class="control-label">Arıza Sebebi : </label>
                                @Html.TextBox("FaultReason", null, new { placeholder = Model.FaultReason, @class = "form-control" })
                            </div>
                            <div class="col-lg-5">
                                <label for="exampleInputPassword1" class="control-label">Kullanılan Malzeme : </label>
                                @Html.TextBox("UsedMaterial", null, new { placeholder = Model.UsedMaterial, @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group m-form__group row">

                            <div class="col-lg-5">
                                <label for="exampleInputPassword1" class="control-label">Açıklama : </label>
                                @Html.TextArea("Explanation", null, new { placeholder = Model.Explanation, @class = "form-control" })
                            </div>

                            <div class="col-lg-6">

                                <div style="display:flex;align-items:center;justify-content:center" class="form-group">

                                    <button type="submit" class="btn btn-primary">GÜNCELLE</button>
                                    @*@Html.ActionLink("GÜNCELLE","CustomerUpdate","Home",new { @class="btn btn-primary"})*@
                                </div>

                            </div>

                            <h2>&nbsp;</h2>

                        </div>

                    </div>
                </div>

            </div>

        </div>
    </div>
  }





